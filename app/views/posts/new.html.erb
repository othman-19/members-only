<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">       
        <%= form_for(@post) do |f| %>
            <ul>
            <% @post.errors.full_messages.each do |error| %>
            <li><%= error %></li>
            <% end %>
            </ul>
            <p>
            <%= f.label :title %><br />
            <%= f.text_field :title, class: 'form-control'%>
            </p>
            <p>
            <%= f.label :body %><br />
            <%= f.text_area :body, class: 'form-control'%>
            </p>
            <p>
            <%= f.submit "Create post", class: "btn btn-primary" %>
            </p>
            
        <% end %>
